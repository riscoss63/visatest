{% extends "back_end/base.html.twig" %}

{% block contenu %}
    {{ form_start(form)}}

    <div class="row">
        <h5 class=" m-auto col-8"><i class="fa fa-globe"></i>  {% if app.request.attributes.get('_route') == 'edit_transport_evisa' %} Modification de type de tarif / {{transport.titre}} {% else %} Ajout de type de tarif {% endif %}   </h5>
        <div class="col-4 text-right pr-5">
            <a href="{{path('liste_transport_evisa')}}" class="btn btn-retour"><i class="fas fa-chevron-left"></i> Retour </a>
            <button type="submit" class="btn btn-enregistrer"><i class="fas fa-save"></i> Enregistrer </a>
        </div>
    </div>

    <div class="row justify-content-center mt-5">
        <div class="col-6 text-center">    
                    
                <div class="row form-group text-right">
                    {{ form_label(form.titre, 'Libellé', {'label_attr' : {'class': 'col-sm-2 col-form-label'}}) }}
                    <div class="input-group col-sm-10">
                        {{ form_widget(form.titre) }}
                    </div>
                </div>
                <div class="row form-group text-right mb-5">
                    {{ form_label(form.libelleCourt, 'Libellé court', {'label_attr' : {'class': 'col-sm-2 col-form-label'}}) }}
                    <div class="input-group col-sm-10">
                        {{ form_widget(form.libelleCourt) }}
                    </div>
                </div>
                <div class="row form-group text-right">
                    {{ form_label(form.informations, 'Infos supplémentaires (délai de livraison)', {'label_attr' : {'class': 'col-sm-2 col-form-label'}}) }}
                    <div class="input-group col-sm-10">
                        {{ form_widget(form.informations) }}
                    </div>
                </div>
                <div class="row form-group text-right">
                    {{ form_label(form.tarif, 'Prix', {'label_attr' : {'class': 'col-sm-2 col-form-label'}}) }}
                    <div class="input-group col-sm-10">
                        <div class="input-group-prepend">
                            <span class="input-group-text">€ </span>
                        </div>
                        {{ form_widget(form.tarif) }}
                    </div>
                </div>
                <div class="row form-group text-right">
                    {{ form_label(form.imageFile, 'Logo transport', {'label_attr' : {'class': 'col-sm-2 col-form-label'}}) }}
                    <div class="input-group col-sm-10">
                        {{ form_widget(form.imageFile) }}
                    </div>
                </div>
                <div class="row form-group text-right">
                    {{ form_label(form.actif, 'Horaires d\'ouvetures', {'label_attr' : {'class': 'col-sm-2 col-form-label'}}) }}
                    <div class="input-group col-sm-1 align-items-center">
                        {{ form_widget(form.actif) }}
                    </div>
                </div>            
                <ul class="sticky-toolbar">
                    <li class="toolbar-items">
                        <a href="{{path('liste_transport_evisa')}}" class="btn btn-retour"><i class="fas fa-chevron-left"></i> </a>
                        <button type="submit" class="btn btn-enregistrer"><i class="fas fa-save"></i> </a>
                    </li>
                </ul>
                {{form_widget(form._token)}}

            {{ form_end(form, {'render_rest': false})}}
        </div>
    </div>
{% endblock %}