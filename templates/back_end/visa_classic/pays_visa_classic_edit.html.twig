{% extends "back_end/base.html.twig" %}

{% block contenu %}
    {{ form_start(form)}}

    <div class="row">
        <h5 class=" m-auto col-8"><i class="fa fa-globe"></i>  {% if app.request.attributes.get('_route') == 'edit_pays_visa_classic' %} Modification d'une page pays Visa classic {% else %} Ajout d'une page pays Visa classic {% endif %}   </h5>
        <div class="col-4 text-right pr-5">
            <a href="{{path('show_pays_visa_classic')}}" class="btn btn-retour"><i class="fas fa-chevron-left"></i> Retour </a>
            <button type="submit" class="btn btn-enregistrer"><i class="fas fa-save"></i> Enregistrer </a>
        </div>
    </div>

    <div class="row justify-content-center mt-5">
        <div class="col-10 text-center">    
                    
                <div class="row form-group text-right " >
                    {{ form_label(form.active, 'Status', {'label_attr' : {'class': 'col-sm-2 col-form-label'}}) }}
                    <div class="input-group col-sm-1 align-items-center">
                        {{ form_widget(form.active) }}
                    </div>
                </div>
                <div class="row form-group text-right">
                    {{ form_label(form.pays, 'Pays générique', {'label_attr' : {'class': 'col-sm-2 col-form-label'}}) }}
                    <div class="input-group col-sm-10">
                        {{ form_widget(form.pays) }}
                    </div>
                </div>
                <div class="row form-group text-right mb-5">
                    {{ form_label(form.slug, 'Url simplifiée de la page', {'label_attr' : {'class': 'col-sm-2 col-form-label'}}) }}
                    <div class="input-group col-sm-10">
                        {{ form_widget(form.slug) }}
                    </div>
                </div>
                {% for type in form.meta %}
                <div class="row form-group text-right">
                {{ form_label(type, null , {'label_attr' : {'class': 'col-sm-2 col-form-label'}}) }}
                    <div class="input-group col-sm-10">
                        {{ form_widget(type) }}
                    </div>
                </div>
                {% endfor %}
                <div class="row form-group text-right">
                    {{ form_label(form.position, 'Position', {'label_attr' : {'class': 'col-sm-2 col-form-label'}}) }}
                    <div class="input-group col-sm-1">
                        {{ form_widget(form.position) }}
                    </div>
                </div>
                <div class="row form-group text-right">
                    {{ form_label(form.imageFile, 'Image à la une', {'label_attr' : {'class': 'col-sm-2 col-form-label'}}) }}
                    <div class="input-group col-sm-10">
                        {{ form_widget(form.imageFile) }}
                    </div>
                </div>
                <div class="row form-group text-right">
                    {{ form_label(form.communique, null, {'label_attr' : {'class': 'col-sm-2 col-form-label'}}) }}
                    <div class="input-group col-sm-10">
                        {{ form_widget(form.communique) }}
                    </div>
                </div>
                </div>
                <ul class="sticky-toolbar">
                    <li class="toolbar-items">
                        <a href="{{path('show_pays_visa_classic')}}" class="btn btn-retour"><i class="fas fa-chevron-left"></i> </a>
            
                    </li>
                    <li class="toolbar-items">
                        <button type="submit" class="btn btn-enregistrer"><i class="fas fa-save"></i> </a>
                    </li>
                </ul>
            {{ form_end(form, {'render_rest': false})}}
        </div>
    </div>
{% endblock %}