<style>
    .modal{
        margin: 35px;
        max-width: 1100px;
        overflow: auto;

    } 
</style>

<div class="row">
    <h5 class=" m-auto col-8"><i class="fa fa-users-cog"></i>Frais compl√©mentaires </h5>
</div>

<div class="row">
    <div class="col-12">
        {{ form_start(form, {'action': path('frais_completementaire_visa_classic', {'id': id}), 'method': 'POST'}) }}
                    
            <div id="formB-demo" class="collectionB " {% if form.fraisComplementaire.vars.prototype is defined %} data-prototype="{{ form_widget(form.fraisComplementaire.vars.prototype)|e('html_attr') }}" data-prototype-name="{{ form.fraisComplementaire.vars.prototype.vars.name|e('html_attr') }}" {% endif %} data-allow-add="{{ form.fraisComplementaire.vars.allow_add }}" data-allow-remove="{{ form.fraisComplementaire.vars.allow_delete }}" data-name-prefix="{{ form.fraisComplementaire.vars.full_name }}" >

                {% for frais in form.fraisComplementaire %}
                    <div class="row ">
                        <div class="col-3">
                            {{ form_row(frais.titre)}}
                        </div>
                        <div class="col-3">
                            {{ form_row(frais.quantite)}}
                        </div>
                        <div class="col-3">
                            {{ form_row(frais.prixUnitaire)}}
                        </div>
                        <div class="col-3">
                            {{ form_row(frais.total)}}
                        </div>
                    </div>
                {% endfor %}

            </div>

        {{ form_end(form)}}
    </div> 
</div>

<script type="text/javascript" src="{{ asset('backend/js/jquery.collection.js') }}"></script>
    <script type="text/javascript">
        $('.collectionB').collection({
            up: '<a href="#" class="btn btn-default"><span class="fas fa-arrow-circle-up"></span></a>',
            down: '<a href="#" class="btn btn-default"><i class="fas fa-arrow-alt-circle-down"></i></a>',
            add: '<a href="#" class="btn btn-default"><i class="fas fa-plus-circle"></i></a>',
            remove: '<a href="#" class="btn btn-default"><i class="fas fa-trash-alt"></i></a>'
        });
        
        function displayVals() {
            var singleValues = $( ".form[fraisComplementaire][1][quantite]" ).val();
            var multipleValues = $( "#multiple" ).val() || [];
            // When using jQuery 3:
            // var multipleValues = $( "#multiple" ).val();
            $( "p" ).html( "<b>Single:</b> " + singleValues +
                " <b>Multiple:</b> " + multipleValues.join( ", " ) );
        }
        
        $( "select" ).change( displayVals );
        displayVals();
    </script>

    
