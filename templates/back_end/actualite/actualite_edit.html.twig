{% extends "back_end/base.html.twig" %}
{% block title %}Modifier une actualitée{% endblock %}
{% block menu_header %}
    {% include "back_end/actualite/__header.html.twig" %}
{% endblock %}

{% block contenu %}
    {{ form_start(form)}}

    <div class="row">
        <h5 class=" m-auto col-8"><i class="fa fa-globe"></i>  {% if app.request.attributes.get('_route') == 'edit_actualite' %} Modification d'une actualitée {% else %} Ajout d'une actualitée {% endif %}   </h5>
        <div class="col-4 text-right pr-5">
            <a href="{{path('show_actualite')}}" class="btn btn-retour"><i class="fas fa-chevron-left"></i> Retour </a>
            <button type="submit" class="btn btn-enregistrer"><i class="fas fa-save"></i> Enregistrer </a>
        </div>
    </div>

    <div class="row justify-content-center mt-5">
        <div class="col-10 text-center">    
                    
                <div class="row form-group text-right">
                    {{ form_label(form.titre, 'Titre de la page', {'label_attr' : {'class': 'col-sm-2 col-form-label'}}) }}
                    <div class="input-group col-sm-10">
                        {{ form_widget(form.titre) }}
                    </div>
                </div>
                {% for type in form.meta %}
                <div class="row form-group text-right">
                {{ form_label(type, null , {'label_attr' : {'class': 'col-sm-2 col-form-label'}}) }}
                    <div class="input-group col-sm-10">
                        {{ form_widget(type) }}
                    </div>
                </div>
                {% endfor %}
                <div class="row form-group text-right mb-5">
                    {{ form_label(form.slug, 'Url simplifiée de la page', {'label_attr' : {'class': 'col-sm-2 col-form-label'}}) }}
                    <div class="input-group col-sm-10">
                        {{ form_widget(form.slug) }}
                    </div>
                </div>
                <div class="row form-group text-right">
                    {{ form_label(form.actif, 'Statut', {'label_attr' : {'class': 'col-sm-2 col-form-label'}}) }}
                    <div class="input-group col-sm-1">
                        {{ form_widget(form.actif) }}
                    </div>
                </div>
                <h4> Sélection type de service</h4>
                <div class="row form-group text-right">
                    {{ form_label(form.visaClassic, null, {'label_attr' : {'class': 'col-sm-2 col-form-label'}}) }}
                    <div class="input-group col-sm-10">
                        {{ form_widget(form.visaClassic) }}
                    </div>
                </div>
                <div class="row form-group text-right">
                    {{ form_label(form.evisa, null, {'label_attr' : {'class': 'col-sm-2 col-form-label'}}) }}
                    <div class="input-group col-sm-10">
                        {{ form_widget(form.evisa) }}
                    </div>
                </div>
                <div class="row form-group text-right">
                    {{ form_label(form.carteTourisme, null, {'label_attr' : {'class': 'col-sm-2 col-form-label'}}) }}
                    <div class="input-group col-sm-10">
                        {{ form_widget(form.carteTourisme) }}
                    </div>
                </div>
                <div class="row form-group text-right">
                    {{ form_label(form.imageFile, 'Ajout / changement d\'image', {'label_attr' : {'class': 'col-sm-2 col-form-label'}}) }}
                    <div class="input-group col-sm-10">
                        {{ form_widget(form.imageFile) }}
                    </div>
                </div>
                <div class="row form-group text-right mb-5">
                    {{ form_label(form.contenu, 'Contenu de la page', {'label_attr' : {'class': 'col-sm-2 col-form-label'}}) }}
                    <div class="input-group col-sm-10">
                        {{ form_widget(form.contenu) }}
                    </div>
                </div>
                <ul class="sticky-toolbar">
                    <li class="toolbar-items">
                        <a href="{{path('liste_zone')}}" class="btn btn-retour"><i class="fas fa-chevron-left"></i> </a>
            
                    </li>
                    <li class="toolbar-items">
                        <button type="submit" class="btn btn-enregistrer"><i class="fas fa-save"></i> </a>
                    </li>
                </ul>
                {{form_widget(form._token)}}
            {{ form_end(form, {'render_rest': false})}}
        </div>
    </div>
{% endblock %}