<!doctype html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ asset('/frontend/fonts/font.css') }}"> 
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
            <link href="https://fonts.googleapis.com/css?family=Fira+Sans+Condensed:500|Open+Sans+Condensed:300|Open+Sans:300,600|Roboto+Condensed:300,400,700|Roboto:100&display=swap" rel="stylesheet">
            <link href="https://fonts.googleapis.com/css?family=Poppins&display=swap" rel="stylesheet"> 
            <link href="{{ asset('/backend/css/main.css') }}" rel="stylesheet">
            <link rel="stylesheet" href="https://unpkg.com/bootstrap-table@1.15.5/dist/bootstrap-table.min.css">
            <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
            <script src="https://kit.fontawesome.com/d4578f32e0.js" crossorigin="anonymous"></script>
            <script src="{{ asset('bundles/fosjsrouting/js/router.min.js') }}"></script>
            <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.css" />
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/css/bootstrap-select.min.css">

            
        {% endblock %}

    </head>

    <body>
        {% block flash %}
            <div class="messages">
                {% for type, messages in app.flashes %}
                    {% for message in messages %}
                        {# Bootstrap alert, see http://getbootstrap.com/components/#alerts #}
                        <div class="alert alert-{{ type }} fade show m-0" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <p>{{ message }}</p>
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
        {% endblock %}
        {% block header %}
            <div class="container-fluid">
                <div class="row">
                    <div class="col-2">
                        <div class="row" style="background-color: #282733;">
                            <div class="col-12 mt-4">
                                <a href=""><img src=" {{ asset("/backend/images/logo-visa-en-ligne.png")}} " /> </a>
                            </div>
                            <div class="col-12 my-5">
                                <ul class="nav flex-column">
                                    <li class="nav-item">
                                        <a class="nav-link menu-l {% if (app.request.attributes.get('_route') == 'show_users' or app.request.attributes.get('_route') == 'show_acces' or app.request.attributes.get('_route') == 'show_acces_user' or app.request.attributes.get('_route') == 'show_access_ip_users')%}active{% endif %}" href="{{ path('show_users')}}"><i class="fa fa-users-cog"></i>Utilisateurs</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link menu-l {% if app.request.attributes.get('_route') == 'show_clients' %} active {% endif %}" href="{{ path('show_clients') }}"><i class="fa fa-users"> </i> Clients</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link menu-l {% if app.request.attributes.get('_route') == 'liste_zone' %} active {% endif %}" href="{{ path('liste_zone') }}"><i class="fa fa-globe"> </i> Zones</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link menu-l {% if app.request.attributes.get('_route') == 'show_pays' %} active {% endif %}" href="{{ path('show_pays') }}" ><i class="fa fa-flag"> </i> Pays</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link menu-l {% if app.request.attributes.get('_route') == 'show_liste_notes_de_course' %} active {% endif %}" href="{{ path('show_liste_notes_de_course') }}"><i class="fa fa-bicycle"> </i> Notes de courses</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link menu-l {% if app.request.attributes.get('_route') == 'home_edit' %} active {% endif %}" href="{{ path('home_edit') }}"><i class="fa fa-tags"> </i> Page accueil </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link menu-l {% if app.request.attributes.get('_route') == 'show_actualite' %} active {% endif %}" href="{{ path('show_actualite') }}"><i class="fa fa-layer-group"> </i> Pages additionnelles</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link menu-l {% if app.request.attributes.get('_route') == 'show_questions_reponses' %} active {% endif %}" href="{{ path('show_questions_reponses') }}"><i class="fa fa-question-circle"> </i>  Foire aux questions</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link menu-l 
                                            {% if app.request.attributes.get('_route') == 'infos_entreprise_evisa' or app.request.attributes.get('_route') == 'show_pays_evisa' or app.request.attributes.get('_route') == 'liste_transport_evisa' or app.request.attributes.get('_route') == 'show_demandes_evisa' %} 
                                                active 
                                            {% endif %}" href="{{ path('infos_entreprise_evisa')}}" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa"> EV </i> E-visa</a>
                                        <div class="dropdown-menu menu-left
                                            {% if app.request.attributes.get('_route') == 'infos_entreprise_evisa' or app.request.attributes.get('_route') == 'show_pays_evisa' or app.request.attributes.get('_route') == 'liste_transport_evisa' or app.request.attributes.get('_route') == 'show_demandes_evisa' or app.request.attributes.get('_route') == 'show_type_evisa' or app.request.attributes.get('_route') == 'add_type_evisa' or app.request.attributes.get('_route') == 'edit_type_evisa' or app.request.attributes.get('_route') == 'show_volet_infos_evisa' or app.request.attributes.get('_route') == 'add_pays_evisa' or app.request.attributes.get('_route') == 'edit_pays_evisa' %}
                                                show
                                            {% endif %}" 
                                        href="{{ path('infos_entreprise_evisa')}}" aria-labelledby="dropdownMenuButton">

                                            <a class="dropdown-item {% if app.request.attributes.get('_route') == 'infos_entreprise_evisa' %} active {% endif %}" href="{{ path('infos_entreprise_evisa')}}"><i class="fa fa-building"></i> Infos Entreprise</a>
                                            <a class="dropdown-item 
                                                {% if app.request.attributes.get('_route') == 'show_pays_evisa' or app.request.attributes.get('_route') == 'show_type_evisa' or app.request.attributes.get('_route') == 'add_type_evisa' or app.request.attributes.get('_route') == 'show_volet_infos_evisa' or app.request.attributes.get('_route') == 'edit_type_evisa' or app.request.attributes.get('_route') == 'add_pays_evisa' or app.request.attributes.get('_route') == 'edit_pays_evisa' %} 
                                                    active 
                                                {% endif %}" 
                                                href="{{ path('show_pays_evisa')}}"><i class="fa fa-flag"></i> Pays EVisa</a></a>
                                            <a class="dropdown-item {% if app.request.attributes.get('_route') == 'liste_transport_evisa' %} active {% endif %}" href="{{ path('liste_transport_evisa')}}"><i class="fa fa-shipping-fast"></i>Tarifs transport/livraison</a>
                                            <a class="dropdown-item {% if app.request.attributes.get('_route') == 'show_demandes_evisa' %} active {% endif %}" href="{{ path('show_demandes_evisa')}}"><i class="fa fa-check"><span></span></i> Gestion des demandes</a>
                                        </div>
                                    </li>
                                    <li class="nav-item">


                                        <a class="nav-link menu-l 
                                        {% if app.request.attributes.get('_route') == 'infos_entreprise_visa_classic' or app.request.attributes.get('_route') == 'show_pays_visa_classic' or app.request.attributes.get('_route') == 'liste_transport_visa_classic' or app.request.attributes.get('_route') == 'show_demandes_visa_classic' %}       active 
                                        {% endif %}" href="{{ path('infos_entreprise_visa_classic')}}" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa"> VC </i> Visa classic</a>
                                        
                                        <div class="dropdown-menu menu-left
                                            {% if app.request.attributes.get('_route') == 'infos_entreprise_visa_classic' or app.request.attributes.get('_route') == 'show_pays_visa_classic' or app.request.attributes.get('_route') == 'liste_transport_visa_classic' or app.request.attributes.get('_route') == 'show_demandes_visa_classic' or app.request.attributes.get('_route') == 'show_type_visa_classic' or app.request.attributes.get('_route') == 'add_type_visa_classic' or app.request.attributes.get('_route') == 'edit_type_visa_classic' or app.request.attributes.get('_route') == 'show_volet_infos_evisa' or app.request.attributes.get('_route') == 'add_pays_visa_classic' or app.request.attributes.get('_route') == 'edit_pays_visa_classic' %}
                                                show
                                            {% endif %}" 
                                        href="{{ path('infos_entreprise_visa_classic')}}" aria-labelledby="dropdownMenuButton">

                                            <a class="dropdown-item 
                                                {% if app.request.attributes.get('_route') == 'infos_entreprise_visa_classic' %} active {% endif %}" href="{{ path('infos_entreprise_visa_classic')}}"><i class="fa fa-building"></i> Infos Entreprise</a>
                                            <a class="dropdown-item 
                                                {% if app.request.attributes.get('_route') == 'add_pays_visa_classic' or app.request.attributes.get('_route') == 'show_type_visa_classic' or app.request.attributes.get('_route') == 'add_type_visa_classic' or app.request.attributes.get('_route') == 'show_volet_infos_visa_classic' or app.request.attributes.get('_route') == 'edit_type_visa_classic' or app.request.attributes.get('_route') == 'add_pays_visa_classic' or app.request.attributes.get('_route') == 'edit_pays_visa_classic' %} 
                                                    active 
                                                {% endif %}" 
                                                href="{{ path('show_pays_visa_classic')}}"><i class="fa fa-flag"></i> Pays Visa classic</a></a>
                                            <a class="dropdown-item {% if app.request.attributes.get('_route') == 'liste_transport_visa_classic' %} active {% endif %}" href="{{ path('liste_transport_visa_classic')}}"><i class="fa fa-shipping-fast"></i>Tarifs transport/livraison</a>
                                            <a class="dropdown-item {% if app.request.attributes.get('_route') == 'show_demandes_visa_classic' %} active {% endif %}" href="{{ path('show_demandes_visa_classic')}}"><i class="fa fa-check"><span></span></i> Gestion des demandes</a>
                                        </div>

                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link menu-l {% if app.request.attributes.get('_route') == 'show_pays_carte_tourisme' %} active {% endif %}" href="{{ path('show_pays_carte_tourisme')}}"><i class="fa"> CT </i>  Carte de tourisme</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link menu-l" href="#"><i class="fa"> IV </i>  Invitations</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link menu-l {% if app.request.attributes.get('_route') == 'show_assurance' %} active {% endif %}" href="{{ path('show_assurance')}}"><i class="fa"> AS </i> Assurances</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link menu-l" href="#"><i class="fa fa-at"> </i> Personnalisation des emails</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link menu-l" href="#"><i class="fa fa-star"> </i> Codes promotionnels</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-10">
                        <div class="row align-items-baseline sticky-top z-index-1" style="background-color: #282733;">
                            <div class="col-9">
                                {% block menu_header %}{% endblock %}
                            </div>
                            <div class="col-3 text-white mt-3">
                                {% if app.user %}
                                   <p> Bienvenue, {{ app.user.prenom }}  <a href="{{ path('app_logout') }}">Déconnecter</a></p>
                                {% endif %}                                
                            </div>
                        </div>
                        <div class="row mt-4">
                            <div class="col-12">
                                {% block contenu %}{% endblock %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endblock %}
        {% block body %}
                    
        {% endblock %}
        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
            <script src="https://unpkg.com/bootstrap-table@1.15.5/dist/bootstrap-table.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/js/bootstrap-select.min.js"></script>

        {% endblock %}
    </body>
</html>
