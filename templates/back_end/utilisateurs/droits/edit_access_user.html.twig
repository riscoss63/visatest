 <style>
   .modal{
       margin-top: 35px;
       max-width: 1100px;
   } 
 </style>

 <div class="row justify-content-center mt-5">
    <div class="col-10 text-center">
        <h6 class="text-center my-5"> Modification Droit <strong>par user</strong></h6>
            {{form_start(form, {'action': path('edit_acces_user', {'id': id}), 'method': 'POST'})}}

            <div class="row form-group text-right align-items-center">
                {{ form_label(form.nom, 'Nom', {'label_attr' : {'class': 'col-sm-2 col-form-label'}}) }}
                <div class="input-group col-sm-10">
                    {{ form_widget(form.nom) }}
                </div>
            </div>
            <div class="row form-group text-right align-items-center">
                {{ form_label(form.prenom, 'Prenom', {'label_attr' : {'class': 'col-sm-2 col-form-label'}}) }}
                <div class="input-group col-sm-10">
                    {{ form_widget(form.prenom) }}
                </div>
            </div>
            <div class="row form-group text-right align-items-center">
                {{ form_label(form.email, 'Mail', {'label_attr' : {'class': 'col-sm-2 col-form-label'}}) }}
                <div class="input-group col-sm-10">
                    {{ form_widget(form.email) }}
                </div>
            </div>

            <div class="row form-group text-right align-items-center">
                {{ form_label(form.services, 'Services', {'label_attr' : {'class': 'col-sm-2 col-form-label'}}) }}
                <div class="input-group col-sm-10">
                    {{ form_widget(form.services) }}
                </div>
            </div>

            <div class="row form-group text-right">
                <div class="input-group col-sm-3 offset-sm-9">
                    <button type="submit" id="services_submit" name="services[submit]" class="form-control btn btn-primary"><i class=" fas fa-save"></i>Enregistrer</button>
                </div>
            </div>

        {{ form_end(form, {'render_rest': false})}}
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/js/bootstrap-select.min.js"></script>
