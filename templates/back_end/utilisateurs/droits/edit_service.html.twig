 <div class="row justify-content-center mt-5">
    <div class="col-10 text-center">
        <h6 class="text-center my-5"> Modification <strong>Droit</strong></h6>
            {{form_start(form, {'action': path('edit_acces', {'id': id}), 'method': 'POST'})}}
            <div class="row form-group text-right align-items-center">
                {{ form_label(form.service, 'Section', {'label_attr' : {'class': 'col-sm-2 col-form-label'}}) }}
                <div class="input-group col-sm-10">
                    {{ form_widget(form.service) }}
                </div>
            </div>

            <div class="row form-group text-right align-items-center">
                {{ form_label(form.droits, 'Roles', {'label_attr' : {'class': 'col-sm-2 col-form-label'}}) }}
                <div class="input-group col-sm-10">
                    {{ form_widget(form.droits) }}
                </div>
            </div>                

            <div class="row form-group text-right">
                <div class="input-group col-sm-3 offset-sm-9">
                    <button type="submit" id="services_submit" name="services[submit]" class="form-control btn btn-primary"><i class=" fas fa-save"></i>Enregistrer</button>
                </div>
            </div>
        {{ form_end(form)}}
    </div>
</div>

