 <style>
   .modal{
       margin-top: 35px;
       max-width: 1100px;
   } 
 </style>

 <div class="row justify-content-center mt-5">
    <div class="col-10 text-center">
        <h6 class="text-center my-5"> Modification autorisation par<strong> adresse ip</strong></h6>
            {{form_start(form, {'action': path('edit_access_ip_user', {'id': id}), 'method': 'POST'})}}

            

        {{ form_end(form, {'render_rest': false})}}
    </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Adresse Ip</th>
      <th scope="col">Derniere connexion</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    {% for ip in ips %}
        <tr>
            <th scope="row">{{ip.ip}}</th>
            <td>{{ip.updatedAt|date('d/m/Y')}}</td>
            {% if ip.autoriser == true %}
              <th scope="row"><a href="{{path('del_access_ip', {id: ip.id})}}" ><i class="fas fa-minus-circle"></i> </a></th>
            {% else %}
              <th scope="row"><a href="{{path('add_access_ip', {id: ip.id})}}" ><i class="fas fa-plus"></a></th>
            {% endif %}
        </tr>
    {% endfor %}
    </tr>
  </tbody>
</table>
