            </div>
        </div>

        <div class="banner-img-right on-tablet-desktop"></div>

    </div>

    <div class="destinations-cards">
    <h1 class="page-title"><span class="text-primary">Vos visas</span> vers plus de 50 destinations</h1>

    <div class="destinations-tabs">
        <div class="tabs-simple">
            <div class="nav-tabs-navigation">
                <div class="nav-tabs-wrapper">
                    <ul class="nav nav-tabs nav-tabs-home" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#visa-classique" role="tab" aria-selected="true"><h2>Visa classique</h2></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#evisa" role="tab" aria-selected="false"><h2>E-visa électronique</h2></a>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="tab-content">
                <div class="tab-pane active" id="visa-classique" role="tabpanel">
                    <div class="container small-container">
                        <div class="row justify-content-between">
                            {% for visaclassic in visaClassics %}
                                <div class="destination-wrapper">
                                    <div class="destination-img">
                                        <img src="{{ vich_uploader_asset(visaclassic, 'imageFile') }}" alt="" class="img-fluid">
                                    </div>
                                    <div class="destination-card">
                                        <div class="row">
                                            <div class="destination-info col-7">
                                                <div class="d-flex align-items-center justify-content-between">
                                                    <h3 class="destination-title">Visa {{ visaclassic.pays.titre}}</h3>
                                                </div>
                                                <div class="destination-jours-ouvres"><span><img src="images/chronometre.svg" alt="icônes jours ouvrés" class="icon">
                                                    {% for type in visaclassic.typeVisa|sort((a, b) => a.delaiObtention <=> b.delaiObtention) %}
                                                        {% if loop.first %}
                                                            {{type.delaiObtention}} Jour(s)
                                                        {% endif %}  
                                                    {% endfor %}
                                                </span></div>
                                                <div class="categorie-visa">
                                                    <p class="categorie-visa-title">Catégories de visa :</p>
                                                    <p class="categorie-visa-description"> 
                                                        {% for type in visaclassic.typeVisa %}
                                                            {{type.categorieVisa.titre}},
                                                        {% endfor %} 
                                                    </p>
                                                </div>
                                            </div>

                                            <div class="destination-price col-5">
                                                <div>
                                                    <p class="destination-price-small">A partir de</p>
                                                    <p class="price">
                                                        {% for type in visaclassic.typeVisa|sort((a, b) => a.fraisConsulaire <=> b.fraisConsulaire) %}
                                                            {% if loop.first %}
                                                                {{type.fraisConsulaire}} € TTC
                                                            {% endif %}  
                                                        {% endfor %}
                                                    </p>
                                                    <a href="{{ path('visa_classic_show', {slug : visaclassic.slug})}}" class="destination-price-icon btn btn-primary">
                                                        <span class="btn-label"><img src="images/plus-white.svg"  alt="icone plus d'infos" class="price-icon svg"></span>
                                                        infos
                                                    </a>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            {% endfor %}
						</div>                       
                        <div class="text-center">
                            <div class="btn-see">
                                <a href="listing-destinations.html"><img src="images/right-chevron.svg" alt="icône voir toutes les destinations" class="icon">Voir toutes <span>les destinations</span></a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="tab-pane" id="evisa" role="tabpanel">
                    <div class="container small-container">

                        <div class="row justify-content-between">
                            {% for evisa in evisas %}
                                <div class="destination-wrapper">
                                    <div class="destination-img">
                                        <img src="{{ vich_uploader_asset(evisa, 'imageFile') }}" alt="" class="img-fluid">
                                    </div>
                                    <div class="destination-card">
                                        <div class="row">
                                            <div class="destination-info col-7">
                                                <div class="d-flex align-items-center justify-content-between">
                                                    <h3 class="destination-title">Visa {{ evisa.pays.titre}}</h3>
                                                </div>
                                                <div class="destination-jours-ouvres"><span><img src="images/chronometre.svg" alt="icônes jours ouvrés" class="icon">
                                                    {% for type in evisa.typeVisa|sort((a, b) => a.delaiObtention <=> b.delaiObtention) %}
                                                        {% if loop.first %}
                                                            {{type.delaiObtention}} Jour(s)
                                                        {% endif %}  
                                                    {% endfor %}
                                                </span></div>
                                                <div class="categorie-visa">
                                                    <p class="categorie-visa-title">Catégories de visa :</p>
                                                    <p class="categorie-visa-description"> 
                                                        {% for type in evisa.typeVisa %}
                                                            {{type.categorieVisa.titre}},
                                                        {% endfor %} 
                                                    </p>
                                                </div>
                                            </div>

                                            <div class="destination-price col-5">
                                                <div>
                                                    <p class="destination-price-small">A partir de</p>
                                                    <p class="price">
                                                        {% for type in evisa.typeVisa|sort((a, b) => a.fraisConsulaire <=> b.fraisConsulaire) %}
                                                            {% if loop.first %}
                                                                {{type.fraisConsulaire}} € TTC
                                                            {% endif %}  
                                                        {% endfor %}
                                                    </p>
                                                    <a href="{{ path('evisa_show', {slug : evisa.slug})}}" class="destination-price-icon btn btn-primary">
                                                        <span class="btn-label"><img src="images/plus-white.svg"  alt="icone plus d'infos" class="price-icon svg"></span>
                                                        infos
                                                    </a>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                        <div class="text-center">
                            <div class="btn-see">
                                <a href="listing-destinations.html"><img src="images/right-chevron.svg" alt="icône voir toutes les destinations" class="icon">Voir toutes <span>les destinations</span></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

