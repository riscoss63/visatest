                            <div class="step-wrapper">
                                <div class="step">
                                    <span class="step-icon"><img src="images/steps/2.svg" alt="icône étape 2"></span>
                                </div>
                                <div class="step-content">
                                    <p class="step-title">Etape 2</p>
