<div class="how">
    <h1 class="page-title"><span class="text-primary">Comment</span> ça marche ?</h1>

    <div class="destinations-tabs">
        <div class="tabs-simple">
            <div class="nav-tabs-navigation">
                <div class="nav-tabs-wrapper">
                    <ul class="nav nav-tabs nav-tabs-home" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#how-visa-classique" role="tab" aria-selected="true"><h2>Visa classique</h2></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#how-evisa-electronique" role="tab" aria-selected="false"><h2>E-visa électronique</h2></a>
